# ============================================================================
# WEBSITE ASSISTANT v3 - PRODUCTION ENVIRONMENT
# ============================================================================
# Copy this file to .env.production and fill in your values

# ============================================================================
# DATABASE (Use Neon, Supabase, or Cloud SQL)
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/website_assistant_v3

# ============================================================================
# STRIPE
# ============================================================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ============================================================================
# MESSAGE QUEUE (CloudAMQP or self-hosted)
# ============================================================================
RABBITMQ_URL=amqps://user:password@host/vhost

# ============================================================================
# CACHE (Upstash or Redis Cloud)
# ============================================================================
REDIS_URL=redis://default:password@host:6379

# ============================================================================
# AI PROVIDERS
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...

# ============================================================================
# RAGNAROK INTEGRATION
# ============================================================================
RAGNAROK_API_URL=https://ragnarok.barriosa2i.com/api
RAGNAROK_API_KEY=...

# ============================================================================
# KIE.AI VIDEO GENERATION
# ============================================================================
KIE_API_KEY=...

# ============================================================================
# APP CONFIGURATION
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://barriosa2i.com,https://www.barriosa2i.com

# ============================================================================
# RESURRECTION TASK (Background worker)
# ============================================================================
RESURRECTION_ENABLED=true
RESURRECTION_INTERVAL=300
RESURRECTION_THRESHOLD=600
RESURRECTION_MAX_ATTEMPTS=3
RESURRECTION_BATCH_SIZE=10

# ============================================================================
# GOOGLE DRIVE STORAGE (Optional)
# ============================================================================
GOOGLE_DRIVE_CREDENTIALS_PATH=/app/credentials/service_account.json
GOOGLE_DRIVE_ROOT_FOLDER_ID=...

# ============================================================================
# SENTRY (Error tracking - Optional)
# ============================================================================
SENTRY_DSN=https://...@sentry.io/...

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_TRINITY_BRIDGE=true
ENABLE_GENERATIVE_UI=true
ENABLE_LEAD_CAPTURE=true
