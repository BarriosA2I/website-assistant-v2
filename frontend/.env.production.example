# ============================================================================
# BARRIOS A2I WEBSITE ASSISTANT v3.0 — FRONTEND ENVIRONMENT (PRODUCTION)
# ============================================================================
# Copy this file to .env.local for local development
# In Vercel, set these via Dashboard → Settings → Environment Variables

# ============================================================================
# API Configuration
# ============================================================================
# Backend API URL (Google Cloud Run)
NEXT_PUBLIC_API_URL=https://website-assistant-backend-HASH.run.app

# WebSocket URL for real-time chat (same as API URL but with wss://)
NEXT_PUBLIC_WS_URL=wss://website-assistant-backend-HASH.run.app

# ============================================================================
# Stripe Configuration (Public Keys Only)
# ============================================================================
# Stripe publishable key (pk_live_... for production, pk_test_... for testing)
NEXT_PUBLIC_STRIPE_KEY=pk_live_your_stripe_publishable_key

# Stripe Price IDs for checkout
NEXT_PUBLIC_STRIPE_PRICE_STARTER=price_starter_id
NEXT_PUBLIC_STRIPE_PRICE_PROFESSIONAL=price_professional_id
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# ============================================================================
# Analytics & Tracking (Optional)
# ============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_CHECKOUT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# App Configuration
# ============================================================================
# App metadata
NEXT_PUBLIC_APP_NAME=Barrios A2I Website Assistant
NEXT_PUBLIC_APP_VERSION=3.0.0
NEXT_PUBLIC_APP_URL=https://barriosa2i.com

# ============================================================================
# VERCEL-SPECIFIC (Set via Vercel Dashboard)
# ============================================================================
# These are automatically set by Vercel:
# - VERCEL_URL
# - VERCEL_ENV
# - VERCEL_REGION
# - VERCEL_GIT_COMMIT_SHA
# - VERCEL_GIT_COMMIT_MESSAGE
