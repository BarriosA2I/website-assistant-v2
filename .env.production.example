# ===========================================
# WEBSITE ASSISTANT v3.0 - PRODUCTION CONFIG
# ===========================================
# Copy this to .env.production and fill in values
# NEVER commit actual secrets to git!

# ===========================================
# ENVIRONMENT
# ===========================================
ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# API URLs (Update with your Cloud Run URLs)
# ===========================================
API_URL=https://api.barriosa2i.com
FRONTEND_URL=https://app.barriosa2i.com
NEXT_PUBLIC_API_URL=https://api.barriosa2i.com
NEXT_PUBLIC_WS_URL=wss://api.barriosa2i.com

# ===========================================
# ANTHROPIC (AI Provider)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...

# ===========================================
# STRIPE (Payment Processing)
# ===========================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Stripe Price IDs (create in Stripe Dashboard â†’ Products)
STRIPE_PRICE_STARTER=price_...        # $2,500 - 30s commercial
STRIPE_PRICE_PROFESSIONAL=price_...   # $5,000 - 60s commercial
STRIPE_PRICE_ENTERPRISE=price_...     # $15,000 - 90s+ commercial

# ===========================================
# DATABASE (Cloud SQL PostgreSQL)
# ===========================================
# Format: postgresql://user:password@host:port/database
# For Cloud SQL: postgresql://user:password@/database?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=postgresql://website_assistant:PASSWORD@/website_assistant?host=/cloudsql/PROJECT:REGION:INSTANCE

# ===========================================
# REDIS (Memorystore / Upstash)
# ===========================================
REDIS_URL=redis://10.0.0.3:6379
REDIS_PREFIX=barrios_v3

# ===========================================
# RABBITMQ (CloudAMQP)
# ===========================================
# Get from https://www.cloudamqp.com/
RABBITMQ_URL=amqps://user:pass@hostname/vhost
RABBITMQ_EXCHANGE=barrios_events

# ===========================================
# AWS S3 (Video Storage)
# ===========================================
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
S3_BUCKET=barriosa2i-video-deliveries

# ===========================================
# GOOGLE DRIVE (Document Storage)
# ===========================================
# Base64 encoded JSON credentials or path
GOOGLE_DRIVE_CREDENTIALS_JSON={"type":"service_account",...}
GOOGLE_DRIVE_FOLDER_ID=1abc...

# ===========================================
# SENDGRID (Email Delivery)
# ===========================================
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=delivery@barriosa2i.com
SENDGRID_TEMPLATE_ID_WELCOME=d-...
SENDGRID_TEMPLATE_ID_DELIVERY=d-...

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=generate-a-strong-64-char-secret-here
CORS_ORIGINS=https://app.barriosa2i.com,https://barriosa2i.com

# ===========================================
# OBSERVABILITY
# ===========================================
SENTRY_DSN=https://...@sentry.io/...
PROMETHEUS_ENABLED=true

# ===========================================
# TRINITY (Competitive Intelligence)
# ===========================================
TRINITY_API_URL=https://trinity-api.barriosa2i.com
